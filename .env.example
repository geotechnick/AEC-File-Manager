# AEC File Manager Configuration

# Local LLM Settings
USE_LOCAL_LLM=true
LLM_MODEL_PATH="./models/llama-2-7b.ggml"
LLM_MODEL_TYPE="llama"  # Options: llama, mistral, phi
LLM_CONTEXT_SIZE=2048
LLM_MAX_TOKENS=512

# Ollama Settings (alternative to local model files)
OLLAMA_BASE_URL="http://localhost:11434"
OLLAMA_MODEL="llama2"

# OpenAI API (if using cloud models)
# OPENAI_API_KEY="your-api-key-here"
# OPENAI_MODEL="gpt-3.5-turbo"

# UI Settings
STREAMLIT_PORT=8501
STREAMLIT_HOST="localhost"
DEBUG_MODE=false

# File Processing Settings
MAX_FILE_SIZE_MB=100
SUPPORTED_EXTENSIONS=".pdf,.docx,.xlsx,.csv,.txt,.dwg,.dxf,.ifc,.rvt"

# Database Settings
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
MAX_REVISIONS_PER_FILE=10

# Security Settings
REQUIRE_AUTH=false
# AUTH_USERNAME="admin"
# AUTH_PASSWORD="your-secure-password"

# QC Settings
DEFAULT_QC_DUE_DAYS=7
QC_REMINDER_DAYS=2
AUTO_QC_ASSIGNMENT=false

# Notification Settings
EMAIL_NOTIFICATIONS=false
# EMAIL_SMTP_SERVER="smtp.gmail.com"
# EMAIL_SMTP_PORT=587
# EMAIL_USERNAME="your-email@domain.com"
# EMAIL_PASSWORD="your-app-password"